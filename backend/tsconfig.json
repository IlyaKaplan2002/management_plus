{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2022",
    "module": "ES2022",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@helpers/*": ["helpers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@types": ["types"],
      "@utils/*": ["utils/*"]
    },

    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
